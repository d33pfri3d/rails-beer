<li class="row rating-<%= beer.rating %>">
  <div class="col-sm-3">
    <a href="#" target="_blank">
      <%= beer_image(beer.image) %>
    </a>
    <p class="text-center rating"><strong><%= beer.rating %></strong>/5</p>
  </div>

  <div class="col-sm-9">
    <h3><%= link_to beer.name, beer_path(beer.name) %></h3>
    <p class="text-muted"><em>Brewed by <%= beer.brewery %></em></p>

    <div>
      <p>
        <%= beer.description %>
      </p>
    </div>

    <ul class="list-unstyled">
      <li>
       <%= link_to beer.style.name, beers_path(filter: beer.style.name), class: 'label label-primary' %>
      </li>
    </ul>
  </div>
</li>